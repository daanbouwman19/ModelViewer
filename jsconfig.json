{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"]
    },
    "lib": ["esnext", "dom"],
    "checkJs": false
  },
  "vueCompilerOptions": {
    "target": 3
  },
  "include": ["src/**/*.js", "src/**/*.vue", "tests/**/*.js"],
  "exclude": ["node_modules", "out", "release", "dist"]
}
