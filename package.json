{
  "name": "modelviewer-app",
  "version": "1.0.0",
  "description": "My Model Slideshow Viewer",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": {
    "name": "Daan Bouwman",
    "email": "daan@example.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.daanbouwman.modelviewer",
    "productName": "ModelViewer",
    "files": [
      "out/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ]
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-istanbul": "^4.0.6",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.0.0",
    "electron-builder": "^26.1.0",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.0.10",
    "prettier": "^3.3.3",
    "vite": "7.1.12",
    "vite-plugin-istanbul": "^7.2.0",
    "vitest": "^4.0.6"
  }
}
