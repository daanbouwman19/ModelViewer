{
  "name": "albumviewer-app",
  "version": "1.0.0",
  "description": "My Album Slideshow Viewer",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "predev": "npx electron-builder install-app-deps --force",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": {
    "name": "Daan Bouwman",
    "email": "daan@example.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.daanbouwman.modelviewer",
    "productName": "ModelViewer",
    "electronLanguages": [
      "en-US"
    ],
    "compression": "maximum",
    "files": [
      "out/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,license.txt,LICENSE.txt,test,tests,example,examples}"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-istanbul": "^4.0.6",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.0.0",
    "electron-builder": "^26.1.0",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.0.10",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4",
    "vitest": "^4.0.6"
  }
}
