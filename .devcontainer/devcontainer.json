{
  "name": "MediaPlayer Electron Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/home/builduser/app",
  "remoteUser": "builduser",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/builduser/.ssh,readonly,type=bind,consistency=cached"
  ],
  "postCreateCommand": "npm install && npx electron-builder install-app-deps",
  "postStartCommand": "/usr/local/share/desktop-init.sh && npm run dev"
}
