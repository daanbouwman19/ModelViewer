{
  "name": "Node.js Dev Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:24",
  "remoteUser": "node",
  "postCreateCommand": "npm install",
  "mounts": [
    "source=album_viewer_node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}