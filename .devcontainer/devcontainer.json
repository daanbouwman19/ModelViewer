{
  "name": "Electron Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "electron-app",
  "workspaceFolder": "/home/builduser/app",
  "remoteUser": "builduser",
  "shutdownAction": "none",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postStartCommand": {
    "start-vnc": "/usr/local/share/desktop-init.sh",
    "install-deps": "npm install",
    "start-dev-server": "npm run dev"
  }
}
