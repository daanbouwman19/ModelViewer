{
  "name": "Electron Dev Container",
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  "dockerComposeFile": "docker-compose.yml",
  "service": "electron-app",
  "workspaceFolder": "/home/builduser/app",
  "remoteUser": "builduser",
  "shutdownAction": "none",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postStartCommand": "/usr/local/share/desktop-init.sh && npm install && npm run dev"
}
