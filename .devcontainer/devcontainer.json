{
  "name": "Electron Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "electron-app",
  "workspaceFolder": "/home/builduser/app",
  "remoteUser": "builduser",
  "postCreateCommand": "npm ci --prefer-offline || npm install",
  "shutdownAction": "none",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}