{
  "name": "Electron Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "electron-app",
  "workspaceFolder": "/home/builduser/app",
  "remoteUser": "builduser",
  "shutdownAction": "none",
  "command": "sleep infinity",
  "customizations": {
    "vscode": {
      "extensions": [
        "Vue.volar",
        "vitest.explorer",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postStartCommand": "/usr/local/share/desktop-init.sh && sudo chown -R builduser:builduser /home/builduser/app && npm install && npm run dev"
}
